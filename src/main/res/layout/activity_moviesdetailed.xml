<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
>


    <VideoView
            android:layout_width="373dp"
            android:layout_height="131dp"
            android:id="@+id/movietrailer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"/>
    <ImageView
            android:layout_width="177dp"
            android:layout_height="250dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/moviethumbnail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="306dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/movieoverview"/>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/margin" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/releasedate" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/movieoverview"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/moviename"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="324dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp"
            app:layout_constraintStart_toEndOf="@+id/moviethumbnail"
            android:layout_marginStart="152dp"
            app:layout_constraintHorizontal_bias="0.678"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/movietrailer"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:id="@+id/releasedate"
            android:layout_marginStart="78dp"
            app:layout_constraintStart_toEndOf="@+id/moviethumbnail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="61dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/averagerating" android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toTopOf="@+id/movieoverview" app:layout_constraintVertical_bias="0.050000012"
            app:layout_constraintHorizontal_bias="0.68"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/averagerating"
            android:layout_marginStart="78dp"
            app:layout_constraintStart_toEndOf="@+id/moviethumbnail" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/moviename" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="61dp" android:layout_marginBottom="83dp"
            app:layout_constraintBottom_toTopOf="@+id/movieoverview"
            app:layout_constraintHorizontal_bias="0.67"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="353dp"
            android:layout_height="188dp"
            android:id="@+id/movieoverview"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="76dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_margin="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/movietrailer"
            app:layout_constraintVertical_bias="1.0"/>

    <ImageButton
        android:id="@+id/fav11"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="@+id/margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/heartblank" />

</android.support.constraint.ConstraintLayout>